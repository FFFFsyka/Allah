import java.util.Random;
import java.util.Scanner;

public class Asdsg {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int ans = 1 + new Random().nextInt( 10000);
        boolean running = true;
        while (running) {
            System.out.println("Ведите число от 1 до 10000");
            int n = in.nextInt();
            if (n == ans) {
                System.out.println("Число угадано");
                running = false;
            }
            else if (n > ans) {System.out.println("Загаданное число меньше");
            }
            else {System.out.println("Загаданное число больше");
            }

        }
    }
}
